<script>
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        // Kopyalama baÅŸarÄ±lÄ± olduÄŸunda kullanÄ±cÄ±ya bildir
        const button = event.target.closest('button');
        const originalHTML = button.innerHTML;
        button.innerHTML = '<i class="bi bi-check"></i>';
        button.classList.remove('btn-outline-secondary');
        button.classList.add('btn-success');
        
        setTimeout(() => {
            button.innerHTML = originalHTML;
            button.classList.remove('btn-success');
            button.classList.add('btn-outline-secondary');
        }, 1000);
    }).catch(function(err) {
        console.error('Kopyalama baÅŸarÄ±sÄ±z: ', err);
        alert('ID kopyalanamadÄ±');
    });
}

function updateTheme(weddingId, theme) {
    // Form oluÅŸtur ve gÃ¶nder
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '/Admin/UpdateTheme';
    
    const idInput = document.createElement('input');
    idInput.type = 'hidden';
    idInput.name = 'id';
    idInput.value = weddingId;
    
    const themeInput = document.createElement('input');
    themeInput.type = 'hidden';
    themeInput.name = 'theme';
    themeInput.value = theme;
    
    form.appendChild(idInput);
    form.appendChild(themeInput);
    document.body.appendChild(form);
    form.submit();
}
</script> 