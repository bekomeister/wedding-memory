@{
    ViewData["Title"] = "QR Kod";
    var qr = ViewBag.QrCode as string;
    var link = ViewBag.Link as string;
}

<div class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card p-4 text-center" style="min-width:350px;">
        <h2 class="mb-3">Yükleme Sayfası QR Kodu</h2>
        @if (!string.IsNullOrEmpty(qr))
        {
            <img src="data:image/png;base64,@qr" class="mb-3 mx-auto d-block w-100" style="max-width:200px; height:auto;" />
            <div class="mb-2">
                <a href="@link" target="_blank" class="btn btn-primary">Yükleme Sayfasını Aç</a>
            </div>
            <div class="text-break small">@link</div>
        }
        else
        {
            <div class="alert alert-danger">QR kod oluşturulamadı.</div>
        }
        <a href="/Admin/Index" class="btn btn-secondary mt-3">Geri Dön</a>
    </div>
</div> 