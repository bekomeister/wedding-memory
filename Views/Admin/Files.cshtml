@model List<string>
@{
    ViewData["Title"] = "Görseller";
    var weddingId = ViewBag.WeddingId as string;
}

<div class="container py-4">
    <h2 class="mb-4">Yüklenen Dosyalar</h2>
    <div class="table-responsive">
        <table class="table table-bordered table-striped align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Dosya Linki</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int i = 1;
                    foreach (var file in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td class="text-break">
                                <a href="@file" target="_blank" class="btn btn-outline-primary btn-sm w-100 mb-1">Görüntüle</a>
                                <div class="small text-break">@file</div>
                            </td>
                        </tr>
                        i++;
                    }
                }
                else
                {
                    <tr><td colspan="2" class="text-center">Henüz dosya yüklenmedi.</td></tr>
                }
            </tbody>
        </table>
    </div>
    <a href="/Admin/Index" class="btn btn-secondary mt-3">Geri Dön</a>
</div> 